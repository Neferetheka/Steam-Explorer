<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SteamTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorPrimary">@color/accent_color</item>
        <item name="android:colorPrimaryDark">@color/accent_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
        <item name="android:statusBarColor">@color/accent_color_dark</item>
        <item name="android:colorControlHighlight">@color/accent_color_alpha</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <item name="android:windowSharedElementEnterTransition">@transition/move_image</item>
        <item name="android:windowSharedElementExitTransition">@transition/move_image</item>
    </style>
    <style name="GameSteamTheme" parent="@style/SteamTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>